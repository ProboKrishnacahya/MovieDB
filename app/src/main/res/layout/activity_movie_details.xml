<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_movie_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MovieDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_moviedetails"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/back"
                app:title="@string/detail"
                app:titleTextAppearance="@style/MovieDBTextView.Button"
                app:titleTextColor="@color/colorTextSecondary" />

            <ImageView
                android:id="@+id/img_bg_moviedetails"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_moviedetails"
                app:srcCompat="@drawable/image" />

            <ImageView
                android:id="@+id/img_poster_moviedetails"
                style="@style/MovieDBImageView"
                android:layout_width="120dp"
                android:layout_height="136dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_bg_moviedetails"
                app:srcCompat="@drawable/image" />

            <TextView
                android:id="@+id/lbl_title_moviedetails"
                style="@style/MovieDBTextView.Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/title"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <View
                android:id="@+id/divider_moviedetails"
                android:layout_width="0dp"
                android:layout_height="2.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="add"
                app:layout_constraintBottom_toTopOf="@+id/lbl_genre_moviedetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_poster_moviedetails" />

            <TextView
                android:id="@+id/lbl_genre_moviedetails"
                style="@style/MovieDBTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/genre"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toEndOf="@+id/divider_moviedetails"
                app:layout_constraintStart_toStartOf="@+id/divider_moviedetails"
                app:layout_constraintTop_toBottomOf="@+id/divider_moviedetails" />

            <TextView
                android:id="@+id/lbl_overview_moviedetails"
                style="@style/MovieDBTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/subtitle"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintEnd_toEndOf="@+id/lbl_genre_moviedetails"
                app:layout_constraintStart_toStartOf="@+id/lbl_genre_moviedetails"
                app:layout_constraintTop_toBottomOf="@+id/lbl_genre_moviedetails" />

            <TextView
                android:id="@+id/lbl_id_moviedetails"
                style="@style/MovieDBTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/movie_id"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/lbl_overview_moviedetails"
                app:layout_constraintTop_toBottomOf="@+id/lbl_overview_moviedetails" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_poster_moviedetails"
                app:layout_constraintTop_toTopOf="@+id/img_poster_moviedetails">

                <TextView
                    android:id="@+id/lbl_popularity_moviedetails"
                    style="@style/MovieDBTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="24dp"
                    android:text="@string/popularity"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/popularity"
                    app:drawableTint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/lbl_rating_moviedetails"
                    style="@style/MovieDBTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/rating"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/rating"
                    app:drawableTint="@color/colorPrimary" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>